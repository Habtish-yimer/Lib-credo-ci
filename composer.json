{
    "name": "rougin/credo",
    "description": "Doctrine ORM integration for the Codeigniter framework.",
    "keywords": ["codeigniter", "credo", "doctrine", "integration", "orm"],
    "homepage": "https://rougin.github.io/credo/",
    "license": "MIT",
    "authors":
    [
        {
            "email": "rougingutib@gmail.com",
            "homepage": "https://rougin.github.io/",
            "name": "Rougin Gutib",
            "role": "Software Engineer"
        }
    ],
    "require":
    {
        "php": ">=5.4.0",
        "doctrine/orm": "~2.5",
        "rougin/codeigniter": "~3.0",
        "rougin/spark-plug": "~0.5"
    },
    "require-dev":
    {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1.0"
    },
    "autoload":
    {
        "psr-4":
        {
            "Rougin\\Credo\\": "src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Rougin\\Credo\\": "tests"
        }
    },
    "scripts":
    {
        "test": "phpunit"
    },
    "extra":
    {
        "branch-alias":
        {
            "dev-master": "1.0-dev"
        }
    },
    "suggest":
    {
        "rougin/combustor": "CRUD generator for the Codeigniter framework.",
        "rougin/ignite": "Composer-based project for the Codeigniter framework.",
        "rougin/refinery": "\"Ready-to-eat\" migrations for Codeigniter framework",
        "rougin/wildfire": "Query Builder wrapper for the Codeigniter framework."
    }
}